@using TasteRestaurant.Data.Models

@model IEnumerable<MenuItem>
<form method="post">

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="thumbnail col-sm-10 col-sm-offset-1">
                <div class="row">
                    <div class="col-sm-10">
                        <label class="text-primary" style="font-size:17px;">@item.Name</label>
                        <br />
                        @if (item.Spicyness == "0")
                        {
                            <label class="label label-success" style="width:100px;height:25px;">@MenuItem.ESpice.Mild</label>
                        }
                        @if (item.Spicyness == "1")
                        {
                            <label class="label label-danger" style="width:100px;height:25px;">@MenuItem.ESpice.High</label>
                        }
                        @if (item.Spicyness == "2")
                        {
                            <label class="label label-warning" style="width:100px;height:25px;">@MenuItem.ESpice.Moderate</label>
                        }
                        <label class="label label-default" style="width:100px;height:25px;">@item.FoodType.Name</label>
                    </div>
                    <div class="col-sm-2 text-right">
                        <h4>$@item.Price</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10">
                        <p>@item.Description</p>
                    </div>

                    <div class="col-sm-2 text-right">
                        <a asp-page="Details" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Deatils</a>

                        <button type="submit" asp-page-handler="cart" asp-route-cartId="@item.Id"
                           class=" btn btn-success btn-sm">
                            <span class="glyphicon glyphicon-shopping-cart"></span>
                        </button>
                    </div>
                </div>
            </div>
        }
    }
    </form>
