@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<br />
@Html.Partial("_StatusMessage",Model.StatusMessage)
<br />

@foreach (var category in Model.IndexViewModel.CategoryTypes)
{
    <h3 style="padding-left:50px;" class="text-success">@category.Name </h3>
    <div class="row">
        <div class="col-sm-12">
            @Html.Partial("_ThumbnailPartial", Model.IndexViewModel.MenuItems.Where(m => m.CategoryType.Name.Equals(category.Name)))
        </div>
    </div>
}